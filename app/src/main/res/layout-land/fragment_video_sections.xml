<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fdai3744.t_online20.VideoSectionsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="15dp"
                android:text="@string/videos" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/first_video_genre_row"
            android:orientation="horizontal">

            <Button
                android:id="@+id/genre_animation"
                android:background="@mipmap/animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/genre_series"
                android:background="@mipmap/series"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/second_video_genre_row"
            android:orientation="horizontal">

            <Button
                android:id="@+id/genre_action"
                android:background="@mipmap/action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                tools:ignore="ButtonStyle"  />

            <Button
                android:id="@+id/genre_horror"
                android:background="@mipmap/horror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                tools:ignore="ButtonStyle"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/third_video_genre_row"
            android:orientation="horizontal">

            <Button
                android:id="@+id/genre_comedy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/comedy"/>

            <Button
                android:id="@+id/genre_fantasy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@mipmap/fantasy"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
